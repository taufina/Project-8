extends layout.pug

block content
    h1 Update Book
    form(action=`/books/${book.id}`, method='post')

        if errors && errors.length
            h2.error ooooooooooooops!!!!!!
                ul.error
                    each error in errors
                        li=error.message
        p
            label(for='title') Title
            input(name='title', type='text', value=book.title)
        p
            label(for='author') Author
            input(name='author', type='text', value=book.author)
        p
            label(for='genre') Genre
            input(name='genre', type='text', value=book.genre)
        p
            label(for='year') Year
            input(name='year', type='text', value=book.year)
        p
            input(type='submit', value='Update Book')
    form(method='post', action=`/books/${book.id}/delete`, onsubmit="return confirm('Do you really want to delete this book?');")
        p
            a.button(href='/books') Back
        p
            input(type='submit', value='Delete Book')